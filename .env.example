# YouTube Ingestion - Environment Variables Example
# Copy this file to .env and fill in your values

# ====================
# YouTube API
# ====================
YOUTUBE_API_KEY=your_youtube_api_key_here

# ====================
# Kafka Configuration
# ====================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CLIENT_YOUTUBE_INGEST_ID=youtube_ingestion

# ====================
# Database Configuration
# ====================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=airflow
DB_USER=airflow
DB_PASSWORD=airflow

# Variables used by Streamlit entrypoint.sh
WAIT_RETRIES=30
WAIT_DELAY=1

# ====================
# Ingestion Settings
# ====================
POLLING_INTERVAL_SECONDS=300
MAX_VIDEOS_PER_CHANNEL=50
MAX_COMMENTS_PER_VIDEO=100

# ====================
# Model Config (Travel Type & Intention)
# ====================
OPEN_AI_API_KEY=your_openai_api_key_here
MODEL_NAME="gpt-4o-mini"
BATCH_SIZE=100
# ====================
# Kafka Config (Travel Type & Intention)
# ====================
KAFKA_MAX_OFFSETS_PER_TRIGGER=100
KAFKA_PROCESSING_TIME="1 minute"

# ====================
# Model Config (Location Extraction)
# ==================== 
LLM_PROVIDER=google
GOOGLE_API_KEY=your_google_api_key_here
LLM_MODEL_NAME=gemini-2.5-flash-lite
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024
MAX_LOCATIONS=10
MIN_CONFIDENCE_THRESHOLD=0.5
# ====================
# Kafka Config (Location Extraction)
# ====================
KAFKA_TOPIC_LOCATION_INPUT=location-extraction-input
KAFKA_TOPIC_LOCATION_OUTPUT=location-extraction-output
KAFKA_CONSUMER_GROUP=location-extraction-consumer

