# YouTube Ingestion - Environment Variables Example
# Copy this file to .env and fill in your values

# ====================
# YouTube API
# ====================
YOUTUBE_API_KEY=your_youtube_api_key_here

# ====================
# Kafka Configuration
# ====================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CLIENT_YOUTUBE_INGEST_ID=youtube_ingestion

# ====================
# Database Configuration
# ====================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=airflow
DB_USER=airflow
DB_PASSWORD=airflow

# Variables used by Streamlit entrypoint.sh
WAIT_RETRIES=30
WAIT_DELAY=1

# ====================
# Ingestion Settings
# ====================
POLLING_INTERVAL_SECONDS=300
MAX_VIDEOS_PER_CHANNEL=50
MAX_COMMENTS_PER_VIDEO=100

