# ===========================================
# ASCA Processing Module - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# ===========================================

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=airflow
DB_PASSWORD=airflow
DB_NAME=airflow

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_ASCA_INPUT=asca-input
KAFKA_TOPIC_ASCA_OUTPUT=asca-output
KAFKA_CONSUMER_GROUP=asca-consumer

# ASCA Model Configuration
ASCA_MODEL_PATH=/opt/airflow/models/asca/acsa.pkl
ASCA_LANGUAGE=vi
ASCA_AUTO_DETECT_LANGUAGE=true

# VnCoreNLP Path (for Vietnamese processing)
# VNCORENLP_PATH=/opt/airflow/projects/services/processing/tasks/asca/VnCoreNLP-1.2/VnCoreNLP-1.2.jar

# Batch Processing
BATCH_SIZE=50
MAX_RECORDS=500
