{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Location Extraction Output Schema",
  "type": "object",
  "required": ["locations", "overall_score", "meta"],
  "properties": {
    "locations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "confidence"],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["country", "city", "state", "province", "landmark", "unknown"]
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "primary_location": {
      "anyOf": [
        {
          "type": "object",
          "required": ["name", "confidence"],
          "properties": {
            "name": { "type": "string" },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        { "type": "null" }
      ]
    },
    "overall_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "meta": {
      "type": "object",
      "required": ["extractor", "fallback_used"],
      "properties": {
        "extractor": {
          "type": "string",
          "enum": ["llm", "gazetteer", "regex"]
        },
        "fallback_used": {
          "type": "boolean"
        }
      }
    }
  }
}
